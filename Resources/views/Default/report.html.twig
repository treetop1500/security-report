{% block body %}
    <!-- Email Content -->
    <h1>New Security Report for {{ host }}</h1>
    <p>A new security report was generated by the remote host {{ remote_address }} at {{  "now"|date("m/d/Y") }}</p>
    {% if command is defined %}
        <pre>
            {{ report|raw }}
        </pre>
    {% else %}
        <p>{{ report|raw }}</p>
    {% endif %}
{% endblock %}


